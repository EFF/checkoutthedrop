brand-red = #d53f3f
dark-red = #631a15

html, body  
    height 100%
    padding 0

section
    background-color brand-red
    color white
    height 80%
    border-top dark-red solid 1px

header
    width 100%
    height 100%
    padding-top 15px
    background-image url('/images/bg.png')
    background-position center bottom
    color white
    text-align center
    .caption_container
        margin-top 5%
        h3
            font-variant small-caps
            text-shadow 0px 0px 15px black
            font-size 3.5em
    .scroll
        height 50px
        width 50px
        background-image url('/images/scroll.png')
        background-position 0 0
        margin 40px auto 0
        cursor pointer


.ribbon_container
    position relative
    opacity 0.95
    overflow hidden
    color white
    width 250px
    height 250px
    margin auto
    border-left solid dark-red 1px
    border-right solid dark-red 1px

.ribbon_base
    background-color brand-red
    width 250px
    height 200px
    text-align center
    padding-top 20px
    img
        height 90%

.ribbon_base:after
    position absolute
    content ""
    height 0
    width 0
    bottom 0
    border-right 125px solid brand-red
    border-bottom 50px solid transparent
    right 0

.ribbon_base:before
    position absolute
    content ""
    height 0
    width 0
    bottom 0
    border-left 125px solid brand-red
    border-bottom 50px solid transparent
    left 0

.inset
    position absolute
    top -20px
    width 400px
    height 20px
    box-shadow 0px 5px 10px 0px rgba(0,0,0,0.6)
    border-radius 50%
    background rgba(0,0,0,0.6)
    z-index 10

.ribbon
    margin auto
    width 400px
    position relative
    overflow hidden

.form
    width 380px
    margin auto
    h2
        text-align center
        margin-top 30px
    .soundcloud_form
        margin-top 50px
        label
            font-size 1.5em

.insta
    padding-top 30px
    text-align center

footer
    text-align center
    color white
    padding-top 20px
    height 60px
    background-color dark-red