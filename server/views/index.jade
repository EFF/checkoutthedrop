doctype 5
html(lang="en")
    head
        title Check out the drop
        link(href="/stylesheets/style.css", rel="stylesheet")
        link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css", rel="stylesheet")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-status-bar-style", content="blue")
body
    header
        .ribbon
            .inset
            .ribbon_container
                .ribbon_base
                    img(src="/images/logo.png")
        .container
            .row.caption_container
                h3 listen, get inspired
                h3 procude, inspire others
        .scroll

    section(ng-controller="HomeController")
        .container
            .col-md-6
                .form
                    h2 Submit your drop
                    form.soundcloud_form
                        .form-group
                            label Soundcloud url
                            input.form-control(type="url")
                        .form-group
                            label Drop time
                            input.form-control.col-md-1(placeholder="0:55")
                        .radio
                            label I'm a god damn edm fan!
                                input(type="radio", name="fanType", value="edm_fan")
                        .radio
                            label I'm a DJ / Producer
                                input(type="radio", name="fanType", value="dj" checked)
                        button.btn.btn-default.btn-lg(type="submit") Submit

            .col-md-6
                .insta
                    <iframe width='380' height='501' src='http://statigr.am/widget.php?choice=myfeed&username=check_out_the_drop&show_infos=false&linking=instagram&width=380&height=501&mode=slideshow&photo_border=true&pace=5&background=FFFFFF&text=777777&widget_border=true&radius=5&border-color=DDDDDD&user_id=797145950&time=1391544744323' allowTransparency='true' frameborder='0' scrolling='no' style='border:none; overflow:hidden; width:380px; height:501px;'></iframe>

